@model FirstProgramUI.Models.RequestModel.RequestGetModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/Layout.cshtml";

}

<h1>Ekle</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" />

            <div class="form-group">
                <label asp-for="Description">Açıklama</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DesiredQuantity">Miktar</label>
                <input asp-for="DesiredQuantity" class="form-control" />
                <span asp-validation-for="DesiredQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Kategori Adı</label>
                <select class="form-control" name="CategoryID">
                    @foreach (var item in Model.Cateogry)
                    {
                    <option value="@item.ID">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Durum Adı</label>
                <select class="form-control" name="StatusID">
                        @foreach (var item in Model.Status)
                        {
                        <option value="@item.ID">@item.Name</option>
                        }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Listeye geri dön</a>
            </div>
        </form>
    </div>
</div>