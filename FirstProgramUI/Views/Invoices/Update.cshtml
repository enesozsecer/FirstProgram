@model FirstProgramUI.Models.InvoiceModel.InvoiceGetModel
@{
    ViewData["Title"] = "Update";
    //Layout = "~/Views/Shared/Layout.cshtml";
}

<h1>Güncelle</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" />
            <div class="form-group">
                <label asp-for="Name">Açıklama</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderAmount">Teklif Miktarı</label>
                <input asp-for="OrderAmount" class="form-control" />
                <span asp-validation-for="OrderAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Tedarikçi Adı</label>
                <select class="form-control" name="SupplierID">
                    <option value="">Seçiniz</option>
                    @foreach (var item in Model.Supplier)
                    {
                        <option value="@item.ID">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Listeye geri dön</a>
            </div>
        </form>
    </div>
</div>