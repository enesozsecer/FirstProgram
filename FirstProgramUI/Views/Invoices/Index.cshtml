@model IEnumerable<Model.Dtos.InvoiceDto.InvoiceGetDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h1>Faturalar</h1>
<a class="btn btn-primary mb-3" asp-action="Add">Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>Fatura Adı</td>
            <td>Malzeme Adedi</td>
            <td>Malzeme Fiyatı</td>
            <td>Tedarikçi Adı</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.OrderAmount</td>
                <td>@item.OrderPrice</td>
                <td>@item.SupplierName</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.ID" class="badge alert-info">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="badge alert-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>