@model FirstProgramUI.Models.ProductModel.ProductGetModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/Layout.cshtml";

}

<h1>Ekle</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" />

            <div class="form-group">
                <label asp-for="Name">Ürün Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockQuantity">Stok Adedi</label>
                <input asp-for="StockQuantity" class="form-control" />
                
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice">Ürün Fiyatı</label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Kategori Adı</label>
                <select class="form-control" name="CategoryID">
                    @foreach (var item in Model.Cateogry)
                    {
                        <option value="@item.ID">@item.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Listeye geri dön</a>
            </div>
        </form>
    </div>
</div>